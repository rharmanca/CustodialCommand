# Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database

# Server Configuration
PORT=5000

# Security Configuration (REQUIRED)
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-64-character-session-secret-here-change-this-in-production

# Admin Authentication (REQUIRED for production)
ADMIN_USERNAME=admin
# Generate with: node -e "const bcrypt = require('bcrypt'); bcrypt.hash('your_password', 12, (e,h) => console.log(h));"
ADMIN_PASSWORD_HASH=your-bcrypt-password-hash-here

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Cache (optional - falls back to memory if not provided)
# REDIS_URL=redis://username:password@hostname:port

# Logging Configuration (optional)
LOG_LEVEL=info
