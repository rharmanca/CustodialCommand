run = "npm start"
modules = ["nodejs-20"]

[env]
PORT = "5000"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 44956573
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx watch server/index.ts"

[nix]
channel = "stable-25_05"

[agent]
integrations = ["javascript_object_storage==1.0.0"]

[objectStorage]
defaultBucketID = "replit-objstore-05f774ee-e32e-4546-a20e-4f7dda619508"

[deployment]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "cloudrun"
